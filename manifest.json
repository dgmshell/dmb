{
  "name": "DMB Manager",
  "version": "1.0.0",
  "description": "DMB Debt Update.",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "https://globalholdings.app"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "assets/images/icon_32.png",
      "64": "assets/images/icon_64.png"
    }
  },
  "icons": {
    "32": "assets/images/icon_32.png",
    "64": "assets/images/icon_64.png"
  },
  "content_scripts": [
    {
      "matches": ["https://globalholdings.app/*"],
      "js": ["src/js/app.js", "src/js/toast.js", "src/js/dom.js"],
      "css": ["src/css/main.css", "src/css/toast.css"],
      "run_at": "document_end"
    }
  ],
  "author": "David Maldonado"
}
